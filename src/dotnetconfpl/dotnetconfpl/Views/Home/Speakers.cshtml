@model IEnumerable<dotnetconfpl.Model.Speaker>

<div class="success">
    <div class="container text-center">
        <div class="row" style="margin-top: 100px">
            <div class="col-md-6 col-md-offset-3">
                <h1>Prelegenci</h1>
                <hr />
            </div>
        </div>

        @foreach (var item in Model)
        {
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <img src="~/Content/images/@item.Photo" style="margin: 20px; width: 200px; border-radius: 100px; -moz-border-radius: 100px; -webkit-border-radius: 100px;"  /><br />
                    <h2 style="font-weight: normal">@item.Name</h2>
                    <p>
                        @Html.Raw(item.About)
                    </p>
                    <hr />
                </div>
            </div>
        }
    </div>
</div>
