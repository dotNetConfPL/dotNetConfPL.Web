@model dynamic

@{
    ViewBag.Title = "dotnetconf.pl";
}
<div class="container-fluid" style="font-family: 'Segoe UI', Segoe, Arial, Verdana, sans-serif; color: #ccc; font-size: 20px; line-height: 150%; padding: 20px; text-align: center">
    <!--<h1 style="font-weight: normal; margin: -20px 0 40px 0">Pierwsza wirtualna konferencja .NET w Polsce!</h1>
        <div class="line"></div>-->
    <div class="row-fluid">
        <div class="span6 offset3">
            <h1 style="font-weight: normal;">12 października 2013</h1>
            <h2 style="font-weight: normal;">15:00 - 21:00</h2>
            <div class="line"></div>
        </div>
    </div>
    <div class="span12" style="margin-top: 20px; margin-bottom: 20px; margin-left: 0px;">
        <p><a class="btn-large btn-danger" href="@Url.Action("Stream")">OGLĄDAJ NA ŻYWO</a></p>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <p>
                <b>dotNetConfPL</b> to wirtualna konferencja przeznaczona dla .NET developerów.
            </p>
            <p>
                Jest to pierwsze takie wydarzenie w Polsce.
            </p>
            <p>
                Live stream będzie dostępny poprzez Google Hangouts on Air. 
            </p>
            <p>
                Żeby wziąć udział potrzebna będzie jedynie przeglądarka z dostępem do Internetu.
            </p>
            <p>
                Będzie także możliwość zadawania pytań do prelegentów poprzez <a href="https://jabbr.net/#/rooms/dotnetConfPL2013">chat na JabbR</a>.
            </p>
        </div>
        <div class="span12" style="margin-top: 40px; margin-left: 0px;">
            <p><a class="btn-small btn-success" href="http://dotnetconfpl.eventbrite.com/">REJESTRACJA</a></p>
        </div>
    </div>
    
    <div class="row-fluid">        
        <div class="span6 offset3">
            <div class="line"></div>
            <h2 style="font-weight: normal;">Wywiad z Javierem Lozano</h2>
            <h3 style="font-weight: normal">(współorganizatorem <a href="http://dotnetconf.net">dotNetConf</a>)</h3>
            <p>
                <iframe width="640" height="360" src="//www.youtube.com/embed/rkX1remex2U?feature=player_detailpage" frameborder="0" allowfullscreen></iframe>
            </p>
        </div>
    </div>

    <div class="row-fluid">        
        <div class="span6 offset3">
            <div class="line"></div>
            <h1 style="font-weight: normal;">Wsparcie zapewnia</h1>
            <p>
                <a href="http://www.jetbrains.com/"><img src="~/Content/images/logo_jetbrains.gif" style="width: 200px;" /></a> 
            </p>
        </div>
    </div>
</div>
