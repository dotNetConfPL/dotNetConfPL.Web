@model IEnumerable<dotnetconfpl.Model.Session>

@{
    ViewBag.Title = "dotnetconf.pl";
}

<header style="background-image: url('/Content/images/dotNetConfPL-background.jpg'); background-size: cover">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="intro-text">
                    <br />
                    <span class="name">16 Grudnia 2017</span>
                    <span class="skills">14:00 - 22:00</span>
                    <hr>
                    <span class="skills">
                        Wirtualna konferencja dla .NET developerów.
                    </span>
                </div>
            </div>
        </div>
    </div>
</header>

<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <p class="text-center">
                            W tym roku spotykamy się online po raz piąty!
                        </p>  
                    </div>
                </div>
                @foreach (var item in Model)
                {
                    <div class="row">
                        <div class="col-md-8 col-md-offset-2">
                            @if (!string.IsNullOrEmpty(item.Time))
                            {
                                <h3 style="font-weight: normal">@item.Time</h3>
                            }
                            <h2 style="font-weight: normal">@item.Title</h2>
                            <h4>@Html.ActionLink(item.Speaker.Name, "Speakers")</h4>
                            <p>
                                @Html.Raw(item.About)
                            </p>
                            @if (!string.IsNullOrEmpty(item.YoutubeUrl))
                            {
                                <p class="text-center">
                                    <iframe width="640" height="360" src="@item.YoutubeUrl" frameborder="0" allowfullscreen></iframe>
                                </p>
                            }
                            <hr />
                        </div>
                    </div>
                }             
            </div>
        </div>
    </div>
</section>
<section>
    <div class="container">
        <div class="col-lg-12 text-center">
            <h2>Partnerzy</h2>
            <hr class="partners-primary">
        </div>
        <div class="col-lg-12 text-center" style="margin-top: 20px">
            <a href="http://devwarsztaty.pl" style="display: inline-block; margin-top: 50px;">
                <img src="~/Content/images/devWarsztaty.jpg" style="pointer-events: none;" />
            </a>
            <br />
            <a href="http://devstyle.pl/" style="display: inline-block; margin-top: 50px;">
                <img src="~/Content/images/devstyle2017.png" style="pointer-events: none;" width="350" />
            </a>
            <br />
            <a href="https://www.jetbrains.com/" style="display: inline-block; margin-top: 50px;">
                <img src="~/Content/images/jetbrains.png" style="pointer-events: none;" />
            </a>
            <br />
            <a href="https://www.postsharp.net/" style="display: inline-block; margin-top: 50px;">
                <img src="~/Content/images/PostSharpText_Light_402x78.png" style="pointer-events: none;" />
            </a>
            <br />
            <a href="https://www.ndepend.com/" style="display: inline-block; margin-top: 50px;">
                <img src="~/Content/images/NDependLogoBig.png" style="pointer-events: none;" />
            </a>
            <br />
            <a href="http://entrian.com/" style="display: inline-block; margin-top: 50px;">
                <img src="~/Content/images/DotNetConfPL-Entrian-Logo-300.png" style="pointer-events: none;" />
            </a>
        </div>
    </div>
</section>
