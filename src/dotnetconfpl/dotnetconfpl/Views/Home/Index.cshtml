@model IEnumerable<dotnetconfpl.Model.Session>

@{
    ViewBag.Title = "dotnetconf.pl";
}

<header style="background-image: url('/Content/images/dotNetConfPL-background.jpg'); background-size: cover">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="intro-text">
                    <br />
                    <span class="name">31 października 2015</span>
                    <span class="skills">15:00 - 22:00</span>
                    <hr>
                    <span class="skills">
                        Wirtualna konferencja dla .NET developerów.
                    </span>
                </div>
            </div>
        </div>
    </div>
</header>

<section>
    <div class="container text-center">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <h1>Intro</h1>
                <p class="text-center">
                    <iframe width="640" height="360" src="https://www.youtube.com/embed/6z7zUFR2c7g" frameborder="0" allowfullscreen></iframe>
                </p>
                <hr />
            </div>
        </div>
        @foreach (var item in Model)
        {
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <h3 style="font-weight: normal">@item.Time</h3>
                    <h2 style="font-weight: normal">@item.Title</h2>
                    <h4>@Html.ActionLink(item.Speaker.Name, "Speakers")</h4>
                    <p>
                        @Html.Raw(item.About)
                    </p>
                    @if (!string.IsNullOrEmpty(item.YoutubeUrl))
                    {
                        <p class="text-center">
                            <iframe width="640" height="360" src="@item.YoutubeUrl" frameborder="0" allowfullscreen></iframe>
                        </p>
                    }
                    <hr />
                </div>
            </div>
        }
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <h1>Outro</h1>
                <p class="text-center">
                    <iframe width="640" height="360" src="https://www.youtube.com/embed/Lq48rEVt3mc" frameborder="0" allowfullscreen></iframe>
                </p>
                <hr />
            </div>
        </div>
    </div>
</section>

<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Partnerzy</h2>
                <hr class="partners-primary">
            </div>
        </div>
        <div class="col-lg-12 text-center" style="margin-top: 20px">
            <a href="http://devday.pl/" style="display:inline-block; margin-top: 50px;">
                <img src="~/Content/images/devday_logo_2015.jpg" style="pointer-events: none;" />
            </a>
            <br />
            <a href="http://buildstuff.lt/" style="display:inline-block; margin-top: 50px;">
                <img src="~/Content/images/buildstuff-logo.png" style="pointer-events: none;" />
            </a>
            <br />
            <a href="http://devwarsztaty.pl" style="display:inline-block; margin-top: 50px;">
                <img src="~/Content/images/devWarsztaty.jpg" style="pointer-events: none;" />
            </a>
            <br />
            <a href="http://devtalk.pl" style="display: inline-block; margin-top: 50px;">
                <img src="~/Content/images/devtalk.png" style="pointer-events: none;"/>
            </a>
            <br />
            <a href="http://wrocsharp.com/" style="display:inline-block; margin-top: 50px;">
                <img src="~/Content/images/wrocsharp.jpg" style="pointer-events: none;" width="250" height="67" />
            </a>
        </div>
    </div>
</section>
