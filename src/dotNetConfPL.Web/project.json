{
  "webroot": "wwwroot",
  "version": "1.0.0-*",
  "authors": ["Jakub Jedryszek", "Michal Franc", "Pawel Sawicz"],

  "dependencies": {
    "Microsoft.Dnx.Runtime": "1.0.0-beta7-*",
    "Microsoft.AspNet.Mvc": "6.0.0-beta7-*",
    "Microsoft.AspNet.Mvc.TagHelpers": "6.0.0-beta7-*",
    "Microsoft.AspNet.Diagnostics": "1.0.0-beta7-*",
    "Microsoft.AspNet.Server.IIS": "1.0.0-bbeta7-*",
    "Microsoft.AspNet.Server.WebListener": "1.0.0-beta7-*",
    "Microsoft.AspNet.StaticFiles": "1.0.0-beta7-*",
    "Microsoft.AspNet.Tooling.Razor": "1.0.0-beta7-*",
    "Microsoft.Framework.Configuration.Json": "1.0.0-beta7-*",
    "Microsoft.Framework.Logging": "1.0.0-beta7-*",
    "Microsoft.Framework.Logging.Console": "1.0.0-beta7-*",
    "Newtonsoft.Json": "7.0.1",
    "Microsoft.AspNet.Server.Kestrel": "1.0.0-beta7-*"
  },

  "commands": {
    "web": "Microsoft.AspNet.Hosting --server Microsoft.AspNet.Server.WebListener --server.urls http://localhost:5000",
    "kestrel": "Microsoft.AspNet.Hosting --server Microsoft.AspNet.Server.Kestrel --server.urls http://localhost:5001"
  },

  "frameworks": {
    "dnx451": { }
  },

  "exclude": [
    "wwwroot",
    "node_modules",
    "bower_components"
  ],
  "publishExclude": [
    "node_modules",
    "bower_components",
    "**.xproj",
    "**.user",
    "**.vspscc"
  ],
  "scripts": {
    "postrestore": [ "npm install", "bower install" ],
    "prepare": [ "gulp init" ]
  }
}
